{{!< layout}}
{{#post}}
{{#if image}}
<figure class="header-cover" style="background-image: url('{{image}}');"></figure>
{{/if}}
<article class="post-detail-wrapper {{post_class}}">
  {{^if page}}
  <header class="post-header">
    <h1>{{title}}</h1>
    <time class="post-detail-time">{{date format="YYYY-MM-DD HH:mm:ss"}}</time>
  </header>
  {{/if}}
  <section class="post-content typo">
    {{content}}
  </section>
  {{^if page}}
  <footer class="post-footer">
    <section class="post-tags post-detail-tags">
      {{tags separator=" Â· "}}
    </section>
    <section class="post-copyright">
      <p>Copyright: BY-NC-ND</p>
      <p>LICENSE: <a target="_blank" href="http://creativecommons.org/licenses/by-nc-nd/4.0/">Creative Commons 4.0</a></p>
    </section>
    <section class="post-share">
      <h4>SHARE</h4>
    </section>
  </footer>
  <aside class="pagination post-pagination">{{#prev_post}}
      <a href="{{url}}" class="pagination-prev">{{title}}</a>
    {{/prev_post}}
    {{#next_post}}
      <a href="{{url}}" class="pagination-next">{{title}}</a>
    {{/next_post}}</aside>
  {{else}}
  <br>
  {{/if}}
</article>
{{/post}}
